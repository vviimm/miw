<% if @article.changed? %>
  $('#js-field-errors').append("<%=j render('cezar/shared/errors', article: @article) %>");
  $('#js-errors').css("color", "red");
<% else %>
  $('#js-content').removeClass('in').empty();
  $('#<%= dom_id(@article) %>').replaceWith("<%=j render('cezar/shared/article', article: @article).gsub('&quot;', "'") %>");
<% end %>
