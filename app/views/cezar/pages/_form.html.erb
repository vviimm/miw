<div class="content-box-large">
  <div class="panel-heading">
    <div id="js-field-errors" class="panel-name">
      <% if @page.new_record? %>
        Новая cтраница
      <% else %>
        <%= "Редактирование #{@page.name}" %>
      <% end %>
    </div>

    <% if @page.errors.any? %>
      <%= render 'cezar/pages/errors' %>
    <% end %>
  </div>

  <div class="panel-content">

    <%= form_for [:cezar, @page], html: { class: "form-horizontal" }, remote: true do |f| %>

      <div class="form-group">
        <%= f.label :name, "Название", class: "col-sm-2 control-label" %>

        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :content, "Содержание", class: "col-sm-2 control-label" %>

        <div class="col-sm-10">
          <%= f.cktext_area :content, rows: 10, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Сохранить", class: "btn btn-primary", id: "spinner" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
