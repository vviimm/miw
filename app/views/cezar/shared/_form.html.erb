<div class="content-box-large">
  <div class="panel-heading">
    <div id="js-field-errors" class="panel-title">
      <% if @article.new_record? %>
        Новая статья
      <% else %>
        <%= "Редактирование #{@article.title}" %>
      <% end %>
    </div>

    <% if @article.errors.any? %>
      <%= render 'cezar/shared/errors' %>
    <% end %>
  </div>

  <div class="panel-body">

    <%= form_for [:cezar, @article], html: { class: "form-horizontal" }, remote: true do |f| %>

      <div class="form-group">
        <%= f.label :title, "Заголовок", class: "col-sm-2 control-label" %>

        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :theme, "Основная идея", class: "col-sm-2 control-label" %>

        <div class="col-sm-10">
          <%= f.text_field :theme, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :image, "Главная картинка", class: "col-sm-2 control-label" %>

        <div class="col-sm-10">
          <%= f.file_field :image, name: "article[image]" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :body, "Содержание", class: "col-sm-2 control-label" %>

        <div class="col-sm-10">
          <%= f.cktext_area :body, rows: 10, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Сохранить", class: "btn btn-primary", id: "spinner" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
